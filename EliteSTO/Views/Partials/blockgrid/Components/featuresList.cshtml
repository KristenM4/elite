@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ContentModels.FeaturesList>>

@if(Model.Content.Page?.ToLower().StripWhitespace() == "homepage")
{
    @await Html.PartialAsync("~/Views/Partials/HomePage/homepageFeaturesList.cshtml")
}
@if (Model.Content.Page?.ToLower().StripWhitespace() == "problem")
{
    @await Html.PartialAsync("~/Views/Partials/ProblemPage/problemPageFeaturesList.cshtml")
}
@if (Model.Content.Page?.ToLower().StripWhitespace() == "solution")
{
    @await Html.PartialAsync("~/Views/Partials/SolutionPage/solutionPageFeaturesList.cshtml")
}
@if (Model.Content.Page?.ToLower().StripWhitespace() == "about")
{
    @await Html.PartialAsync("~/Views/Partials/AboutPage/aboutPageFeaturesList.cshtml")
}