@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ContentModels.GeneralContent>>

@if(Model.Content.Section == 2)
{
    <div class="fade-in-section container padding-y-md container-w-lg color-white content-center" style="position:relative;z-index:2;text-align:center;margin-bottom:200px;">
        <div class="flex-col content-center text-center gap-md">
            <div>@Model.Content.Title</div>
            <div>@Model.Content.Text</div>
            @if (Model.Content.Buttons is not null && Model.Content.Buttons.Count > 0)
            {
                @foreach (BlockListItem<ContentModels.Button> item in Model.Content.Buttons)
                {
                    if (item.Content.Link is null || item.Content.Color is null || item.Content.Label is null) continue;
                    <div class="content-center flex-col gap-md">
                        <a href="@item.Content.Link.Url" class="button button-@item.Content.Color.Label.ToLower()">
                            <div>
                                @item.Content.Label
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
}
@if(Model.Content.Section == 3)
{
    <div style="z-index:2;position:relative;" class="before-divider-white bg-white color-black">
        <div class="grid-2 gap-2xl fade-in-section container padding-y-lg">
            <div class="flex-col content-center">
                @if(Model.Content.Image is not null)
                {
                    <img style="margin: auto 0;" class="w-full" src="@Model.Content.Image.Url()" alt="@Model.Content.Image.GetAltText()" />
                }
            </div>
            <div class="flex-col gap-lg">
                <div>@Model.Content.Title</div>
                <div>@Model.Content.Text</div>
                @if (Model.Content.Buttons is not null && Model.Content.Buttons.Count > 0)
                {
                    @foreach (BlockListItem<ContentModels.Button> item in Model.Content.Buttons)
                    {
                        if (item.Content.Link is null || item.Content.Color is null || item.Content.Label is null) continue;
                        <div class="flex-col gap-md">
                            <a href="@item.Content.Link.Url" class="button button-@item.Content.Color.Label.ToLower()">
                                <div>
                                    @item.Content.Label
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
}